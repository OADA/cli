{
  "extends": "@tsconfig/node22",
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "module": "node16",
    "moduleResolution": "Node16",
    "declaration": true,
    "removeComments": true,
    "stripInternal": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noErrorTruncation": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": ["src"]
}
