{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "importHelpers": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "stripInternal": true
  },
  "include": ["src/**/*.ts"]
}
